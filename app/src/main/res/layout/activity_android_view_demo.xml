<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.mrc.csdndemo.AndroidViewAbout.AndroidViewDemoActivity">
    <Button
        android:id="@+id/view_get_coordinate"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:text="View 的坐标 长度 宽度 获取"
        android:background="@drawable/button_style"
        android:textSize="17sp"
        android:textColor="@color/text_white"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/view_xy"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:text="View 的x y"
        android:background="@drawable/button_style"
        android:textSize="17sp"
        android:textColor="@color/text_white"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/view_speed"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:text="滑动速度"
        android:background="@drawable/button_style"
        android:textSize="17sp"
        android:textColor="@color/text_white"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/recyclerView_CategoryStyle"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:text="RecyclerView分类样式"
        android:background="@drawable/button_style"
        android:textSize="17sp"
        android:textColor="@color/text_white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
