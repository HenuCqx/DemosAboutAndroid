<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrc.csdndemo.Homepage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/preference_example"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="Preference的使用案例"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/timePicker_example"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="TimePicker的使用案例"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/background_time_task"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="后台定时任务"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/recyclerView_CategoryStyle"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="RecyclerView分类样式"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/set_alarm_and_timer_by_google_voice_action"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="谷歌语音设置闹钟和计时器"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/use_google_voice_action_in_the_app"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text="在APP中调用谷歌语音"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</ScrollView>
